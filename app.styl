html,
body,
header h1
  margin 0
  padding 0

body
  display flex
  flex-direction column
  font 13px Helvetica

header
  height 39px
  margin 0
  background-color mediumspringgreen

main
  display flex
  flex-direction column
  align-content center

section
  width 100vw

section#personal-statement
  min-height 100vh
  flex 1
  margin 0
  padding 0
  background-image url(http://www.samsung.com/global/galaxy/wearables/gear-vr/images/gear-vr_kv_m.jpg)

.responsive-wrapper
  width auto
  background-color salmon

div.responsive-wrapper
  margin 0 auto
  padding 0 12.5px
  padding-top 25px
  display flex
  flex-direction row

  // for i in 1..4
  //   @media (min-width: 2**(i+7)px)
  //     width: 2**(i+7)-55px

  @media (min-width: 768px)
    width 745px

  @media (min-width: 1100px)
    width 1045px

  > div
    min-height: 1px;

  div.column-1
    display flex
    flex-direction column
    width 33.3%
    background-color green

    div.profile
      text-align center

    div.verifications
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content center

      p
        flex-grow 1
        width 100%
        text-align center

  div.column-2
    width 66.6%
    background-color deepskyblue
    display: flex
    flex-direction: column
    justify-content: flex-start

    section
      transition: all 500ms cubic-bezier(0.190, 1.000, 0.220, 1.000);
      box-shadow: 0 1px 1px rgba(0,0,0,0.3);
      transform: translateY(0) scale(0.95, 0.95);
      width: 100%
      background-color white
      border-radius 3px
      padding 12px 6px
      margin-bottom 12px
